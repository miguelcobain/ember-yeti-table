{{docs-hero
  logo="ember"
  slimHeading="Yeti"
  strongHeading="Tables"
  byline="Lightweight and flexible tables addon."}}

<div class="docs-container docs-md">
  <section class="max-w-md mx-auto pb-8">
    {{#docs-demo as |demo|}}
      {{#demo.example name="index-example.hbs"}}
        {{#yeti-table data=data as |yeti|}}

          {{#yeti.table as |table|}}
            {{#table.header as |header|}}
              {{#header.column prop="firstName"}}
                First name
              {{/header.column}}
              {{#header.column prop="lastName"}}
                Last name
              {{/header.column}}
              {{#header.column prop="points"}}
                Points
              {{/header.column}}
            {{/table.header}}

            {{table.body}}
          {{/yeti.table}}

        {{/yeti-table}}
      {{/demo.example}}

      {{demo.snippet "index-example.hbs"}}
    {{/docs-demo}}
  </section>
</div>